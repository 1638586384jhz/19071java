<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.itcast.ssm.mapper.ItemMapper">
<select id="selectItemAll" resultType="Item" >
select * from items
</select>
<select id="selectItemOne" parameterType="int" resultType="Item">
select * from items where id=#{id}
</select>
<update id="updateItem" parameterType="Item">
update items set name=#{name},price=#{price},createtime=#{createTime},detail=#{detail},pic=#{pic} where id=#{id}
</update>
<select id="selectByUserPassword" parameterType="User" resultType="int">
select id from user where username=#{username} and password=#{password}
</select>
</mapper>